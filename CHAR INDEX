(select *from practice order by id ASC LIMIT 1)
UNION
(select *from practice order by name desc LIMIT 1);


ANS : ALTER TABLE PRACTICE
      ADD FULLNAME VARCHAR 
      
   ALTER TABLE PRACTICE
   ADD FNAME VARCHAR;
   
   ALTER TABLE PRACTICE
   ADD LNAME VARCHAR;
      
      SELECT * FROM PRACTICE;
      
ANS : UPDATE PRACTICE 
      SET FULLNAME = CONCAT(FNAME,' ', LNAME);

ANS : UPDATE PRACTICE
      SET FNAME = 'RAMANJANEYA REDDY' WHERE FNAME IS NULL;

ANS : UPDATE PRACTICE
      SET LNAME ='DEVIREDDY' WHERE LNAME IS NULL;


ANS : SELECT SUBSTRING(FULLNAME, CHARINDEX (' ', FULLNAME) +5, LEN(FULLNAME)) AS RESULTS FROM PRACTICE;

ANS : SELECT FULLNAME,SUBSTRING(FULLNAME,5,CHARINDEX(' ', FULLNAME) -1) AS RESULT FROM PRACTICE;

ANS :  SELECT SUBSTRING(FULLNAME, CHARINDEX (' ', FULLNAME) +6, LEN(FULLNAME)) AS RESULTS FROM PRACTICE;












